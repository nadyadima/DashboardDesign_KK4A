<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/card_12"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/top_search" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:text="Search "
            android:textSize="14dp"
            android:background="@drawable/search_bg"
            android:paddingLeft="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/card_11"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="45dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/card_5"
            android:contentDescription="@string/todo" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/card_7"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/card_6"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/card_8"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/popular_1"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/popular_2"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:contentDescription="TODO" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/popular_3"
            android:layout_marginLeft="230dp"
            android:contentDescription="@string/todo"
            android:layout_marginStart="230dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:text="Others"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="TODO"
            android:src="@drawable/other_1" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/other_2"
            android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp"
            android:contentDescription="@string/todo" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/other_3"
            android:layout_marginLeft="255dp"
            android:layout_marginStart="255dp"
            android:contentDescription="@string/todo" />

    </RelativeLayout>

</LinearLayout>